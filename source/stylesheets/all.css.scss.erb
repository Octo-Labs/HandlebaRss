@charset "utf-8";

@import 'normalize';

<%= Rouge::Themes::Github.render(:scope => '.highlight') %>

@import "bourbon";
@import "grid-settings";
@import "neat";

@import "mixins";

body {
  background: #d4d4d4 url("../images/background.png");
  font-family: sans-serif; 
}


.outter-container{
  @include outer-container;
  @include clearfix;
}

.header{
  border-bottom:1px solid #888;
  @include clearfix;

  h3{ 
    float:left;
    margin:0px;
  }
  ul{
    float:right;
    margin:0px;
    padding:0px;
    list-style:none;
    li{
      float:left;
      margin:5px;
    }
  }
}

.single-feed{
  @include span-columns(6);
  @include collapse;
}

.multiple-feeds{
  @include span-columns(6);
  @include omega;
  @include collapse;
}

.demo-code{
  @include span-columns(8);
  @include collapse;
}

.demo-view{
  @include span-columns(4);
  @include omega;
  @include collapse;
}


.entry{
  border-bottom:1px solid #888;
  &:last-child{
    border-bottom:0px;
  }
}

.feed{
  border:1px solid #999;
  border-radius:6px;
  background:#ccc;
  padding:0 10px;
  margin-bottom:1em;
}

.feed-title{
  font-weight:bold;
  color:#700;
}

.author{
  font-style: italic;
  color:#070;
}

.entry-title{
  color:#007;
}

pre.highlight{
  padding:5px;
  border-radius:6px;
  border:1px solid #888;
}


footer{

  clear:both;
  margin-top:1.5em;
  padding:10px;
  border-top:1px solid #aaa;

  zoom: 1;


  @include opacity(0.3);
  //@include transition (opacity 0.4s ease-in 0s);

  &:hover{
    @include opacity(0.9);
  }

  .text{
    padding-top:0.4em;
    padding-left:75px;
    p{
      margin-bottom:0.15em;
      margin-top:0px;
    }
  }

  .octologo{
    float:left;
  }
  
}

