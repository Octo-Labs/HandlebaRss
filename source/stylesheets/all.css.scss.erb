@charset "utf-8";

@import 'normalize';

<%= Rouge::Themes::Github.render(:scope => '.highlight') %>

@import "bourbon";
@import "grid-settings";
@import "neat";

@import "mixins";

body {
  background: #d4d4d4 url("../images/background.png");
  font-family: sans-serif; 
}


.outter-container{
  @include outer-container;
}

.single-feed{
  @include span-columns(6);
  @include collapse;
}

.multiple-feeds{
  @include span-columns(6);
  @include omega;
  @include collapse;
}

.demo-code{
  @include span-columns(8);
  @include collapse;
}

.demo-view{
  @include span-columns(4);
  @include omega;
  @include collapse;
}


.entry{
  border-bottom:1px solid #888;
}

.feed-title{
  font-weight:bold;
  color:#700;
}

.author{
  font-style: italic;
  color:#070;
}

.entry-title{
  color:#007;
}



